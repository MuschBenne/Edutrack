<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/master.css">
    <title>Admin page</title>
    <style>
        #ActiveCoursesPopup {
            display: flex;
            flex-flow:column;
            margin-inline: auto; 
            width: fit-content;
            height: fit-content;
            background-color: rgb(21, 34, 66, 1);
            color: #DBBB68;
            margin-bottom: 25%;
            font-size: 1.5em;
            padding: 5%;
        }

        #ActiveCoursesContainer {
            position: fixed;
            z-index: 99;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.25);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #ActiveCoursesPopup.hidden, #ActiveCoursesContainer.hidden{
            display: none;
        }

        .getActivesLink {
            font-weight: bold;
            color: #DBBB68;
        }
        
    </style>
</head>

<body>
    <div>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/app">My Pages</a></li>
            <li><a href="/logout">Log out</a></li>
        </ul>
    </nav>
    </div>

    <div class="centeredItems" id="errorMessage" style="color: red; margin-top: 10px;"></div>
    
    <div class="centeredItems">
        <h2>Create a new course</h2>
        <input type="text" value="" id="courseName" placeholder="Course Name"></input>
        <input type="text" value="" id="courseId" placeholder="Course ID"></input>
        <input type="button" onclick="addCourse()" value="Submit" ></input>
    </div>

    <div class="centeredItems">
    <% if (users.length > 0) { %>
        <h2>All Users and Their Active Courses</h2>
        <ul>
            <% users.forEach(function(user) { %>
                <li>
                    <strong>Username:</strong> <span class="username"><%= user.username %></span> | 
                    <a href="#" data-username="<%= user.username %>"class="getActivesLink">View Active Courses</a>
                    <!--TODO kanske se till att man ser en users alla reggade kurser-->
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No users available.</p>
    <% } %>
</div>
<div id="ActiveCoursesContainer" class="hidden">
    <div id="ActiveCoursesPopup"></div>
</div>

    <div class="centeredItems">
        <h2>Delete a user</h2>
        <input type="text" value="" id="user" placeholder="Existing user"></input>
        <input type="button" onclick="deleteUser()" value="Submit" ></input>
        
    </div>

    <div class="centeredItems">
        <% if (courses.length > 0) { %>
            <h2>All available courses</h2>
            <ul>
                <% courses.forEach(function(course) { %>
                    <li>
                        <strong>Course Name:</strong> <%= course.name %> | 
                        <strong>Course ID:</strong> <%= course.courseId %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No courses available.</p>
        <% } %>
    </div>

    <div class="centeredItems">
        <h2>Delete a Course</h2>
        <input type="text" value="" id="courseId2" placeholder="Course ID">
        <input type="button" onclick="deleteCourse()" value="Submit">
        
    </div>

    <script>
        // Function to delete a course using its ID
        async function deleteCourse() {
            // Get the course ID from the input field and trim any leading/trailing spaces
            let courseId = document.getElementById("courseId2").value.trim();
    
            // Construct the URL with the courseId parameter for the delete request
            let url = `http://localhost:3000/courseManager?action=removeCourse&courseId=${courseId}`;
            
            // Check if the course ID is empty, show an error message and stop execution
            if (!courseId) {
                errorMessage.innerText = "Course ID cannot be empty!";
                errorMessage.style.color = "red";
                return;
            }
    
            // Make the POST request to delete the course
            let response = await fetch(url, {
                method: "POST",
                headers: {
                    "Content-type": "application/json; charset=UTF-8"
                }
            });
    
            // If the response is successful (status 200), redirect to the admin page
            if (response.ok) {
                window.location.href = "/admin";
            } else {
                // If there's an error, display the error message from the server
                let responseJSON = await response.json();
                errorMessage.innerText = responseJSON.message || "Error deleting course";
                errorMessage.style.color = "red";
            }
        }
    
        // Function to delete a user by username
        async function deleteUser() {
            // Get the username from the input field
            let username = document.getElementById("user").value;
    
            // Construct the URL with the username parameter for the delete request
            let url = `http://localhost:3000/courseManager?action=deleteUser&username=${username}`;
            
            // Make the POST request to delete the user
            let response = await fetch(url, {
                method: "POST",
                headers: {
                    "Content-type": "application/json; charset=UTF-8"
                }
            });
    
            // If the response is successful (status 200), redirect to the admin page
            if (response.ok) {
                window.location.href = "/admin";
            } else {
                // If there's an error, display the error message from the server
                let responseJSON = await response.json();
                errorMessage.innerText = responseJSON.message || "Error deleting user";
                errorMessage.style.color = "red";
            }
        }
    
        // Function to add a new course
        async function addCourse() {
            // Get the course name and course ID from input fields, encode them for URL
            let courseName = encodeURIComponent(document.getElementById("courseName").value);
            let courseId = encodeURIComponent(document.getElementById("courseId").value);
    
            // Construct the URL with the course name and course ID parameters
            let url = `http://localhost:3000/courseManager?action=addCourse&name=${courseName}&courseId=${courseId}`;
    
            // Make the POST request to add the new course
            let response = await fetch(url, {
                method: "POST",
                headers: {
                    "Content-type": "application/json; charset=UTF-8"
                }
            });
    
            // If the response is successful (status 200), redirect to the admin page
            if (response.ok) {
                window.location.href = "/admin";
            } else {
                // If there's an error, display the error message from the server
                let responseJSON = await response.json();
                errorMessage.innerText = responseJSON.message || "Error adding course";
                errorMessage.style.color = "red";
            }
        }
    
        // Event listener to trigger the 'getUserActiveCourses' function when clicking on elements with the class 'getActivesLink'
        document.querySelectorAll(".getActivesLink").forEach((element) => {
            element.addEventListener("click", getUserActiveCourses);
        });
    
        // Event listener for the ActiveCoursesContainer, to hide it when clicking outside
        let ActiveCoursesContainer = document.querySelector("#ActiveCoursesContainer");
        ActiveCoursesContainer.addEventListener("click", (e) => {
            if (e.target !== ActiveCoursesContainer)
                return false;
            ActiveCoursesContainer.classList.toggle("hidden"); // Toggle the visibility of the container
        });
    
        // Function to get the active courses for a user
        async function getUserActiveCourses(e) {
            // Get the username from the clicked element's dataset
            const username = e.target.dataset.username;
    
            // Construct the URL to fetch the registered courses for the user
            const url = "/courseManager?action=fetchRegisteredCourses&username=" + username;
            console.log(url);
    
            // Make the POST request to fetch the active courses
            let response = await fetch(url, {
                method: "POST",
                headers: {
                    "Content-type": "application/json; charset=UTF-8"
                }
            });
        if(response.ok){
            // Find and display the popup container
            let popupContainer = document.querySelector("#ActiveCoursesContainer");
            popupContainer.classList.toggle("hidden");
            
            // Find and clear the popup
            let popup = document.querySelector("#ActiveCoursesPopup");
            popup.innerHTML = "";
            
            // Populate the popup
            let responseData = await response.json();
            let list = document.createElement("ul");
            responseData.data.forEach((element) => {
                let entry = document.createElement("li");
                entry.innerHTML = `Name: ${element.name}, ID: ${element.courseId}`;
                list.appendChild(entry);
            });
            popup.appendChild(list);

        }
    }
    </script>
    
</body>
</html>