<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduTrack</title>
    <link rel="stylesheet" href="/master.css">
    <script src="/static_functions.js"></script>
    
</head>
<body>
  <nav>
      <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/app/course_registration">Register to course</a></li>
          <li><a href="/logout">Log out</a></li>
          <% if (isAdmin){ %>
            <li><a href="/admin">Admin Only</a></li>
          <%}%>
          
      </ul>
  </nav>
  
</body>
<body class="centeredItems"></body>
    <% if (courses){ %>
        <script>
            // Såhär sparas hämtad kursdata så att klienten skulle kunna använda den i en javascript kontext
            // Isådanafall så får vi tåla VSCode error meddelandet.
            const DATA_COURSE = [<%- courses %>];
        </script>
    <%}%>
    
    <h1>Welcome to EduTrack <%= name %>!</h1>

    <h2>My Courses</h2>
    
    <div class="courses-container">
      <% courses.forEach(function(course) { %>
        <a href="/app/course_page?course=<%- course.courseId%>">
          <div class="course-box">
            <h3><%= course.name %></h3>
          </div>
        </a>
      <% }); %>
    </div>  
</body>
</html>